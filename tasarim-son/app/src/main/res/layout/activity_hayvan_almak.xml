<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ArkaPlan"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:gravity="center"
    tools:context=".HayvanAlmak">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onlar aşk, dost, mutluluk. Siz de onların şansı olabilirsiniz."
        android:textSize="20sp"
        android:typeface="serif"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Yuva Arayanlar"
    android:textSize="40sp"
    android:textStyle="bold" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">

    <EditText
        android:id="@+id/turtxt4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Hangi Pet ? (kedi,kopek,vs.)"
        android:paddingVertical="15dp"
        android:paddingLeft="60dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_cruelty" />
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">

    <EditText
        android:id="@+id/turtxt5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Hangi Şehir?"
        android:paddingVertical="15dp"
        android:paddingLeft="60dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_cruelty" />
</RelativeLayout>


<Button
    android:id="@+id/dvm2"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Ara"
    android:layout_marginTop="30dp"
    android:textSize="20dp"
    android:layout_marginHorizontal="45dp"
    />


</LinearLayout>